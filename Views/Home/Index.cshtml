@{
    ViewData["Title"] = "Home Page";
}
@model List<WriteTogether.Models.DB.Story>



<!-- Hero Section -->
<section class="hero-section">
    <div class="hero-content">
        <h1 class="hero-title">WriteTogether</h1>
        <p class="hero-subtitle">Where we collab to make incredible stories...</p>
    </div>
    <div class="hero-image">
        <div class="hero-text">Where we collab to make incredible stories...</div>
    </div>
</section>

<!-- Featured Stories Section -->
<section class="stories-section">
    <div class="stories-grid">
        @foreach (var story in Model)
        {
            int rating = story.RateSt ?? 0;
            string categoryName = story.CategorySt switch
            {
                1 => "Fantasy",
                2 => "Romance",
                3 => "Mistery",
                4 => "Sci-Fi",
                5 => "Horror",
                6 => "Adventure",
                7 => "Drama",
                8 => "Comedy",
                9 => "Historical",
                10 => "Thriller",
                _ => "Unknown"
            };

            <div class="story-card" onclick="openStory(@story.IdSt)">
                <div class="story-image">📖</div>

                <div class="story-info">
                    <h3>@story.TitleSt</h3>

                    <div class="story-rating">
                        @Html.Raw(new string('★', rating) + new string('☆', 5 - rating))
                    </div>

                    <div class="story-meta">
                        <div>Author: @story.AutorStNavigation?.NameUs</div>
                        <div>Category: @categoryName</div>
                        <div>Date: @story.DateUs.ToString("dd/MM/yyyy")</div>
                    </div>
                </div>
            </div>
        }
    </div>



</section>

<!-- Animated particles -->
<div class="particle" style="left: 10%; animation-duration: 6s;"></div>
<div class="particle" style="left: 20%; animation-duration: 8s;"></div>
<div class="particle" style="left: 30%; animation-duration: 10s;"></div>
<div class="particle" style="left: 40%; animation-duration: 7s;"></div>
<div class="particle" style="left: 50%; animation-duration: 9s;"></div>
<div class="particle" style="left: 60%; animation-duration: 11s;"></div>
<div class="particle" style="left: 70%; animation-duration: 6.5s;"></div>
<div class="particle" style="left: 80%; animation-duration: 8.5s;"></div>
<div class="particle" style="left: 90%; animation-duration: 7.5s;"></div>

<!-- Genres Section -->
<section class="genres-section">
    <h2 class="section-title">Una variedad de géneros</h2>
    <p class="section-subtitle">Descubre historias que despertarán tu imaginación</p>

    <div class="genres-container">
        <div class="genres-grid">
            <button class="genre-btn" onclick="window.location.href='categories/category.html?genre=fantasy'">Fantasy</button>
            <button class="genre-btn" onclick="window.location.href='categories/category.html?genre=romance'">Romance</button>
            <button class="genre-btn" onclick="window.location.href='categories/category.html?genre=mystery'">Mystery</button>
            <button class="genre-btn" onclick="window.location.href='categories/category.html?genre=scifi'">Sci-Fi</button>
            <button class="genre-btn" onclick="window.location.href='categories/category.html?genre=horror'">Horror</button>
            <button class="genre-btn" onclick="window.location.href='categories/category.html?genre=adventure'">Adventure</button>
            <button class="genre-btn" onclick="window.location.href='categories/category.html?genre=drama'">Drama</button>
            <button class="genre-btn" onclick="window.location.href='categories/category.html?genre=comedy'">Comedy</button>
            <button class="genre-btn" onclick="window.location.href='categories/category.html?genre=historical'">Historical</button>
            <button class="genre-btn" onclick="window.location.href='categories/category.html?genre=thriller'">Thriller</button>
        </div>
    </div>
</section>

<section class="ai-section">
    <div class="ai-placeholder">
        <h2>Asistente de Escritura con IA</h2>
        <p>Tu compañero de escritura inteligente ya está activo. Utiliza la potencia de Gemini AI para llevar tu historia colaborativa al siguiente nivel:</p>
        <ul>
            <li><strong>Corrección Contextual:</strong> Corrige fragmentos adaptando el estilo y tono a lo que ya se ha escrito.</li>
            <li><strong>Coherencia Global:</strong> Utiliza "Correct all story" para unificar la narrativa y eliminar contradicciones entre autores.</li>
            <li><strong>Ortografía y Gramática:</strong> Limpieza instantánea de errores de redacción y puntuación.</li>
            <li><strong>Continuidad:</strong> Asegura que cada nueva aportación fluya naturalmente con la historia.</li>
        </ul>
    </div>
</section>

<script>
    function openStory(id) {
        window.location.href = '/Stories/Edit/' + id;
    }
</script>
