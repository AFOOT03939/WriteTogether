<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WriteTogether</title>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/account.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WriteTogether.styles.css" asp-append-version="true" />
</head>
<body>

    @{
        var genres = new List<string>
        {
            "Fantasía",
            "Terror"
        };
    }

    <!-- Header/Navigation -->
    <header class="header">
        <div class="logo">
            <a asp-controller="Home" asp-action="Index" class="logo-icon">W</a>
            <div class="dropdown">
                <span class="dropdown-toggle">Stories +</span>
                <div class="dropdown-menu">
                    @{
                        foreach(var genre in genres)
                        {
                            <a class="dropdown-item" asp-controller="Home" asp-action="Category" asp-route-genre="@genre">@genre</a>
                        }
                    }
                </div>
            </div>
        </div>

        <div class="search-container">
            <input type="text" class="search-bar" placeholder="Buscar historias..." id="searchBar">
        </div>

        <div class="nav-buttons">
            <a asp-controller="Home" asp-action="Edit" class="nav-btn start-story-btn">Start a new story</a>
            <a asp-controller="Home" asp-action="Profile" class="nav-btn start-story-btn">Profile</a>
            <a id="log-in" class="nav-btn auth-btn">Log-in</a>
            <a id="sign-up" class="nav-btn auth-btn">Sign-up</a>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/account.js" asp-append-version="true"></script>
    <script src="~/js/category.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
